resource "kubernetes_deployment" "app" {
  metadata {
    name = var.app
    labels = {
      app = var.app
    }
  }

  spec {
    replicas = 3

    selector {
      match_labels = {
        app = var.app
      }
    }

    template {
      metadata {
        labels = {
          app = var.app
        }
      }

      spec {
        container {
          image = var.docker-image
          name  = var.app
          command = ["/opt/pravega/scripts/entrypoint.sh", "standalone"]
          port {
            name           = "port-5000"
            container_port = 5000
          }
        }
      }
    }
  }
}
